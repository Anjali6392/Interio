                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" name="phone" required id="phone" placeholder="Enter the Phone Number"
                        class="form-control">
                </div>
                <div class="mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <input type="text" name="subject" required id="subject" placeholder="Enter the subject" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>

                    <textarea name="message" id="message" required row="5" class="form-control"></textarea>
                </div>
                <div class="mb-3 d-flex">
                    <button type="reset" class=" m-1 mybtn1 bg-danger text-light w-50">Reset</button>
